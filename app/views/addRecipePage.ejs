<%- include('partials/header') %>

<main class="addRecipePage">
    <h2 class="title">Ajouter une recette</h2>
    <form action="/admin/addRecipe/result" method="POST" class="addRecipePageForm">
        <div class="container">
            <div class="description">
                <div class="category">
                    <label for="category">Catégorie</label>
                    <input name="category" id="category" list="categories">
                    <datalist id="categories">
                        <% for (const category of categories) { %>
                            <option value="<%= category.category %>">
                        <% } %>
                    </datalist>
                </div>
                <div class="country">
                    <label for="country">Type de cuisine</label>
                    <input name="country" id="country" list="countries">
                    <datalist id="countries">
                        <% for (const country of countries) { %>
                            <option value="<%= country.country %>">
                        <% } %>
                    </datalist>
                </div>
                <div class="name">
                    <label for="name">Nom</label>
                    <input type="text" name="name" id="name">
                </div>
                <div class="quantity">
                    <label for="quantity">Quantité</label>
                    <input type="text" name="quantity" id="quantity">
                </div>
                <div class="preparationTime">
                    <label for="preparationTime">Temps de préparation</label>
                    <input type="text" name="preparationTime" id="preparationTime">
                </div>
                <div class="restTime">
                    <label for="restTime">Temps de repos</label>
                    <input type="text" name="restTime" id="restTime">
                </div>
                <div class="cookingTime">
                    <label for="cookingTime">Temps de cuisson</label>
                    <input type="text" name="cookingTime" id="cookingTime">
                </div>
                <div class="totalTime">
                    <label for="totalTime">Temps total</label>
                    <input type="text" name="totalTime" id="totalTime">
                </div>
                <div class="image">
                    <label for="image">URL de l'image</label>
                    <input type="text" name="image" id="image">
                </div>
            </div>
            <div class="ingredients" id="ingredients">
                <label for="ingredient">Ingrédients</label>
                <button type="button" onclick="addIngredient()" class="addIngredientButton">+</button>
            </div>
            <div class="instructions" id="instructions">
                <label for="instruction">Instructions</label>
                <textarea name="instructions" id="instructionsList" rows="40" cols="45"></textarea>
            </div>
        </div>
        <input type="submit" value="Valider" class="submitButton">
    </form>
</main>

<%- include('partials/footer') %>